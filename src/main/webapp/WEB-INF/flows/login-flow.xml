<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
      start-state="loginForm">

    <var name="user" class="com.yberdaliyev.models.forms.LoginForm"/>

    <view-state id="loginForm" view="login" model="user">
        <transition on="submit" to="actionCheckLogin"/>
        <transition on="register" to="registerFlow"/>
    </view-state>
    
    <subflow-state id="registerFlow" subflow="register-flow">
        <input name="user"/>
        <transition on="created" to="loginForm"/>
        <transition on="canceled" to="loginForm"/>
    </subflow-state>

    <action-state id="actionCheckLogin">
        <evaluate expression="userService.checkLogin(user)"/>
        <transition on="success" to="main"/>
        <transition on="failure" to="loginForm">
            <set name="flashScope.errorMessage" value="resourceBundle.wronginput"/>
        </transition>
    </action-state>

    <view-state id="main" view="main">

        <transition on="cancelPage" to="cancel"/>
    </view-state>

    <end-state id="cancel" view="cancel"/>

</flow>